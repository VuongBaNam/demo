<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <class>com.example.demo.entity.AddressEntity</class>
        <class>com.example.demo.entity.JobEntity</class>
        <class>com.example.demo.entity.UserEntity</class>
        <class>com.example.demo.entity.Address</class>
        <class>com.example.demo.entity.Job</class>
        <class>com.example.demo.entity.User</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/mydb"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/mydb"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/mydb"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/mydb"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
